@{
}

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model Contact_us

<div class="p-3 w-100">
    <h3 class="text-center">檢視聯絡我們「@Model.contact_id」</h3>
    <p> 編號 : @Model.contact_id </p>
    <p> 標題 : @Model.title </p>
    <p> 姓名 : @Model.name </p>
    <p> Email : <a href="mailto:@Model.email">@Model.email</a> </p>
    <p> 連絡電話 : <a href="tel:+@Model.phone">@Model.phone</a> </p>
    <div class="mb-3">
        <label for="message" class="form-label"> 內容 </label>
        <textarea class="form-control" readonly> @Model.message </textarea>
    </div>
    <a href="/Admin/Contacts" class="btn btn-primary">上一頁</a>
</div>