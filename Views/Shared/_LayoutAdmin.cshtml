<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- googleFonts -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
    <!-- font-awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- cssReset -->
    <link rel="stylesheet" href="~/css/cssReset.css" asp-append-version="true" />
    <!-- quill -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <!-- site -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- all isolation css -->
    <link rel="stylesheet" href="~/Zugether.styles.css" asp-append-version="true" />
    <!-- C3.js -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.7.18/c3.css">
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- bootstrap js-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- C3.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/5.16.0/d3.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/c3/0.7.18/c3.js"></script>
    <!-- quill -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
</head>
<body>
        <nav class='navbar navbar-expand-lg bg-primary'>
            <div class='container-fluid'>
                <p class='text-white mb-0'>Zugrther 後台管理系統</p>
                <button class='navbar-toggler'
                        type='button'
                        data-bs-toggle='collapse'
                        data-bs-target='#navbarNav'
                        aria-controls='navbarNav'
                        aria-expanded='false'
                        aria-label='Toggle navigation'>
                    <span class='navbar-toggler-icon' />
                </button>
                <div class='collapse navbar-collapse justify-content-end'
                     id='navbarNav'>
                    <ul class='navbar-nav'>
                        <li class='nav-item'>
                            <form asp-controller="Admin" asp-action="Logout" method="post">
                                <button type='submit' class='btn btn-sm btn-light'>
                                    登出
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="d-flex p-3">
            @await Html.PartialAsync("_PartialAdminListGroup")
            @RenderBody()
        </div>
</body>
</html>
